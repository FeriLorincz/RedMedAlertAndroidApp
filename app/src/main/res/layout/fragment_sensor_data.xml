<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Vital Signs Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vital Signs"
                    android:textAppearance="?attr/textAppearanceHeadline6"/>

                <!-- Heart Rate -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Heart Rate"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/heartRateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Blood Oxygen -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Blood Oxygen"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/bloodOxygenValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Blood Pressure -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Blood Pressure"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/bloodPressureValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Temperature -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Body Temperature"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/temperatureValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Motion Sensors Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motion Sensors"
                    android:textAppearance="?attr/textAppearanceHeadline6"/>

                <!-- Accelerometer -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Accelerometer"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/accelerometerValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Gyroscope -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gyroscope"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/gyroscopeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Step Counter -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Step Count"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/stepCountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Gravity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gravity"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/gravityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Linear Acceleration -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Linear Acceleration"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/linearAccelerationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Rotation -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Rotation"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/rotationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Orientation -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Orientation"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/orientationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Magnetic Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Magnetic Field"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/magneticFieldValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Environment Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Environment"
                    android:textAppearance="?attr/textAppearanceHeadline6"/>

                <!-- Humidity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Humidity"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/humidityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Light -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Light"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/lightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Proximity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Proximity"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/proximityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Samsung Health Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung Health Data"
                    android:textAppearance="?attr/textAppearanceHeadline6"/>

                <!-- BIA -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bioelectrical Impedance"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/biaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Stress -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Stress Level"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/stressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Sleep -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sleep Status"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/sleepValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Fall Detection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fall Detection"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/fallDetectionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>